<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Admin{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
        {% block stylesheets %}
        <link rel="stylesheet" media="all" href="{{ asset('css/style.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link rel="stylesheet" media="all" href="{{ asset('css/adminstyles.css') }}">
        {% endblock %}
    </head>
    <body>
        <header id="header">
            <div class="container">
                <nav id="nav-secondary">
                    <ul>
                        {# check url with Twitg #}
                        <li><a href="{{ path('home') }}">Accueil du Site</a></li>
                        {% if '/user/' in path(app.request.attributes.get('_route'),
                       app.request.attributes.get('_route_params')) %}
                        <li><a href="{{ path('cours_index') }}">Cours</a></li>
                        {% else %}
                        <li><a href="{{ path('user_index') }}">Utilisateurs</a></li>
                        {% endif %}
                        <li><a href="{{ path('app_logout') }}">DÃ©connexion</a></li>
                    </ul>
                </nav>
            </div>
            {# <a href="{{ path('home') }}" id="logo" title="HarrisonHighSchool">HarrisonHighSchool</a> #}
            <h1 class="text-centered text-white mt-3">Administration</h1>
            {# <div class="divider"></div> #}
        </header>
        <!-- / header -->
        {% block body %}{% endblock %}

        <footer class="mastfoot mt-auto pt-5">
            <div class="mt-5 mb-5">
                <p class="text-casse text-centered">Tous Droits Reserves <a href="https://getbootstrap.com/">Stephane Kergoat</a>2020.</p>
            </div>
        </footer>

        {% block javascripts %}
        <script src="{{ asset('/js/jquery-1.11.1.min.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script>window.jQuery || document.write("<script src='js/jquery-1.11.1.min.js'>\x3C/script>")</script>
        <script src="{{ asset('/js/plugins.js') }}"></script>
        <script src="{{ asset('/js/main.js') }}"></script>  
        {% endblock %}
    </body>
</html>
