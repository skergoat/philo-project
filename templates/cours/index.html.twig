{% extends 'admin.html.twig' %}

{% block title %}Cours index{% endblock %}

{% block body %}
<div class="container">
    <h1>Cours index</h1>
    <a href="{{ path('cours_new') }}" class="btn btn-primary">Ajouter</a>
    <div class="d-flex justify-content-center mt-4">{{ knp_pagination_render(cours) }}</div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Level</th>
                <th scope="col">Duration</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td>{{ cour.titre }}</td>
                <td>{{ cour.description }}</td>
                <td>{{ cour.level }}</td>
                <td>{{ cour.duration }}</td>
                <td>
                    <a href="{{ path('cours_show', {'id': cour.id}) }}" class="btn btn-secondary">show</a>
                    <a href="{{ path('cours_edit', {'id': cour.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center mt-4">{{ knp_pagination_render(cours) }}</div>
</div>
{% endblock %}
