{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block stylesheets %}
<script src="https://kit.fontawesome.com/1596c4b58a.js" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
{{ parent() }}
{% endblock %}


{% block body %}
    {# divider  #}
    <div class="divider"></div>
    {# content  #}
        <div class="container">
            <h1 class="text-centered mb-3">{{ cour.titre }}</h1>
        {% if is_granted("ROLE_ADMIN") %}
        <div class="col m-3 d-flex">
            <a href="{{ path('cours_index') }}" class="btn btn-warning d-block">Menu des Cours</a>
        </div>
        {% endif %}
        <div class="row justify-content-center">
            <div class="col-1">
                <i class="far fa-clock"></i> <span>{{ cour.duration }}</span>
            </div>
            <div class="col-1">
                <i class="fas fa-signal"></i> <span>{{ cour.level }}</span>
            </div>
        </div>
        <p class="text-justify mt-5 mb-4">{{ cour.description }}</p>
        <a href="{{ path('show_lesson', { id : 1}) }}" class="btn btn-primary d-block mx-auto">Commencer</a>
    </div>
{% endblock %}
